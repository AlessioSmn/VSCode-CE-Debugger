{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Avvia debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sistema",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "gdb",
            "stopAtEntry": true,
            "preLaunchTask": "Avvia debug",
            "stopAtConnect": true,
            "setupCommands": [
                {"text": "cd ${workspaceFolder}"},
                {
                    "text": "source .gdbinitvscode",
                    "ignoreFailures": true
                },
            ],
        }
    ]
}
